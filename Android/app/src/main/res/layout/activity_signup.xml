<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignupActivity" android:background="@color/signupPageBackgroundColor">
    <ImageView
            android:layout_width="159dp"
            android:layout_height="173dp" app:srcCompat="@drawable/logo" android:id="@+id/logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="32dp" android:layout_marginEnd="32dp" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" app:layout_constraintVertical_bias="0.0"
            android:contentDescription="@string/logo" android:alpha="0.7"
            app:layout_constraintBottom_toTopOf="@+id/login_email"/>

    <RelativeLayout

            android:layout_width="174dp"
            android:layout_height="228dp"
            android:layout_marginTop="107dp"
            app:layout_constraintTop_toBottomOf="@+id/login_password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="280dp"
            android:layout_marginRight="32dp"
            android:layout_marginEnd="32dp" app:layout_constraintHorizontal_bias="0.575">

        <com.google.android.material.button.MaterialButton
                android:layout_height="72dp"
                android:layout_width="match_parent"
                tools:layout_editor_absoluteY="295dp"
                tools:layout_editor_absoluteX="128dp"
                tools:ignore="MissingConstraints"
                android:text="@string/signup_button_customer"
                android:layout_alignParentTop="false"
                android:onClick="signupCustomer"
        />
        <com.google.android.material.button.MaterialButton
                android:layout_height="72dp"
                android:layout_width="match_parent"
                tools:layout_editor_absoluteY="367dp"
                tools:layout_editor_absoluteX="128dp"
                tools:ignore="MissingConstraints"
                android:text="@string/signup_button_vendor"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:onClick="signupVendor"
        />
        <com.google.android.material.button.MaterialButton
                android:layout_height="72dp"
                android:layout_width="match_parent"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                tools:layout_editor_absoluteY="439dp"
                tools:layout_editor_absoluteX="128dp"
                tools:ignore="MissingConstraints"
                android:text="@string/login_button"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="0dp"
                android:onClick="login"
        />
    </RelativeLayout>

